@model EstudianteModel
@{
    ViewData["Title"] = "Mantenimiento";
}
<h4>Mantenedor de Estudiantes</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Agregar">

            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" readonly ="readonly"/>

            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" maxlength="30" />

                </div>
                <div class="form-group col-md-6">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" value="FechaNacimiento"/>

                </div>
            </div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <input asp-for="Curso" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="DescripEstado" class="form-control"readonly ="readonly" />

            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"> Regresar</a>
                </div>
            </div>

        </form>
    </div>
</div>